<tool id="addToDataset" name="addToDataset" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    <requirements>
        <container type="docker">genomehubs/blobtoolkit:latest</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        ## adding hits
        blobtools add
        --hits $blast
        --hits $diamondblast
        --hits-cols $hitscols
        --taxrule $taxrule
        --taxdump $taxdump
        --evalue $evalue
        --bitscore $bitscore
        --hit-count $hitcount
        --replace $replace
        ~/blobDir
    ]]></command>
    <inputs>
        <param name="blast" type="data" format="ncbi.blastn.out" label="ASSEMBLY_NAME.ncbi.blastn.out"/>
        <param name="diamondblast" type="data" format="diamond.blastx.out" label="ASSEMBLY_NAME.diamond.blastx.out"/>
        <param name="hitscols" type="text" default_value="1=qseqid,2=staxid,3=bitscore,5=sseqid,10=sstart,11=send,14=evalue" optional="true"/>
        <param name="taxrule" type="text" default_value="bestsumorder" optional="true"/>
        <param name="taxdump" type="data_collection"/>
        <param name="evalue" type="integer" default_value="1" optional="true"/>
        <param name="bitscore" type="integer" default_value="1" optional="true"/>
        <param name="hitcount" type="integer" default_value="1" optional="true"/>
        <param name="replace" type="boolean" default_value="false" optional="true"/>
    </inputs>
    <outputs>
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>