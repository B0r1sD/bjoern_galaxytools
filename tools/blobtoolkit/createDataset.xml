<tool id="createDataset" name="createDataset" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    <description>
        create minimal dataset structure "blobDir"
    </description>
    <requirements>
        <container type="docker">genomehubs/blobtoolkit:latest</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        ##mkdir -p ~/BTK_TUTORIAL/FILES &&
        ##cd ~/BTK_TUTORIAL/FILES

        blobtools create \
        ##--fasta ~/BTK_TUTORIAL/FILES/ASSEMBLY_NAME.fasta \
        --fasta $fasta
        --meta $metadata ##~/BTK_TUTORIAL/FILES/ASSEMBLY_NAME.yaml \
        --taxid $ID ##75913 \
        ##--taxdump ~/blobtoolkit/taxdump \

        /blobtoolkit/datasets/blobDir
    ]]></command>
    <inputs>
        <param name="fasta" type="data" format="fasta" label="ASSEMBLY_NAME.fasta" help="TODO" />
        <param name="metadata" type="data" format="" label="ASSEMBLY_NAME.yaml" optional="true" help="TODO"/>
        <param name="ID" type="integer" label="NCBI taxonomy ID" optional="true" help="TODO"/>
    </inputs>
    <outputs>
        <data name="gc" format="json" from_work_dir="/blobtoolkit/datasets/blobDir/gc.json"/>
        <data name="identifiers" format="json"/>
        <data name="length" format="json"/>
        <data name="meta" format="json"/>
        <data name="ncount" format="json"/>
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>