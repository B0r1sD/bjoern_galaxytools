<tool id="createDataset" name="createDataset" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    <description>
        create dataset structure "Blobdir"
    </description>
    <requirements>
        <container type="docker">genomehubs/blobtoolkit:latest</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        genomehubs/blobtoolkit:latest \
        blobtools create --fasta $fasta \
            #if $metadata
            --meta $metadata \
            #end if
            #if $ID
            --taxid $ID \
            #end if
            #if $taxdump
            --taxdump $taxdump \
            #end if
            ~/Blobdir

    ]]></command>
    <inputs>
        <param name="fasta" type="data" format="fasta" label="ASSEMBLY_NAME.fasta" help="TODO" />
        <param name="metadata" type="data" format="yaml" label="ASSEMBLY_NAME.yaml" optional="true" help="TODO"/>
        <param name="ID" type="integer" label="NCBI taxonomy ID" optional="true" help="TODO"/>
        <param name="taxdump" type="data_collection" label="taxdump" optional="true"/>
    </inputs>
    <outputs>
        <data name="gc" format="json" from_work_dir="~/Blobdir/gc.json"/>
        <data name="identifiers" format="json" from_work_dir="~/Blobdir/identifiers.json"/>
        <data name="length" format="json" from_work_dir="~/Blobdir/length.json"/>
        <data name="meta" format="json" from_work_dir="~/Blobdir/meta.json"/>
        <data name="ncount" format="json" from_work_dir="~/Blobdir/ncount.json"/>
    </outputs>
    <tests>
        <test>
            <param name="fasta" value="ASSEMBLY_NAME.fasta"/>
            <output name="identifiers" file="identifiers.json"/>
            <output name="length" file="length.json"/>
            <output name="meta" file="meta.json"/>
            <output name="ncount" file="ncount.json"/>
            <output name="gc" file="gc.json"/>
        </test>
    </tests>
    <help><![CDATA[
    TODO
    ]]></help>
</tool>