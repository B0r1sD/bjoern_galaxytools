<tool id="addToDataset" name="addToDataset" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    <requirements>
        <container type="docker">genomehubs/blobtoolkit:latest</container>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        ## adding hints
        blobtools add \
        --hits $blast ##~/BTK_TUTORIAL/FILES/ASSEMBLY_NAME.ncbi.blastn.out \
        --hits $diamondblast ##~/BTK_TUTORIAL/FILES/ASSEMBLY_NAME.diamond.blastx.out \
        ##--taxrule bestsumorder \
        ##--taxdump ~/blobtoolkit/taxdump \
        /blobtoolkit/datasets/blobDir
    ]]></command>
    <inputs>
        <param name="blast" type="data" format="ncbi.blastn.out" label="ASSEMBLY_NAME.ncbi.blastn.out"/>
        <param name="diamondblast" type="data" format="diamond.blastx.out" label="ASSEMBLY_NAME.diamond.blastx.out"/>
    </inputs>
    <outputs>
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>